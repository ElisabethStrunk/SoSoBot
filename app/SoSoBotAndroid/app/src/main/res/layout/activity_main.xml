<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:id="@+id/leftButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/downButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/upButton"
            app:layout_constraintEnd_toStartOf="@+id/downButton" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:id="@+id/rightButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/downButton" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/downButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/upButton"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:id="@+id/upButton"
            app:layout_constraintEnd_toEndOf="@+id/downButton"
            app:layout_constraintStart_toStartOf="@+id/downButton" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="@+id/downButton"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:id="@+id/downButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>